    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
</resources>